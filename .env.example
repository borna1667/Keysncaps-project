# Environment Configuration Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4242
NODE_ENV=production
CI=false

# Security
ALLOWED_ORIGIN=https://keysncaps.com

# Authentication
VITE_ADMIN_PASSWORD=your-secure-admin-password
JWT_SECRET=your-secure-jwt-secret-min-32-characters-long

# Database Configuration
# Option 1: Use MongoDB URI (recommended for cloud services like MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/keysncaps_db

# Option 2: Use individual MongoDB connection parameters
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=keysncaps_db
MONGODB_USER=
MONGODB_PASSWORD=

# Legacy Database (MariaDB) - can be removed if using MongoDB only
# Database (MariaDB for production)
DB_NAME=keysncaps_db
DB_USER=keysncaps_user
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=3306

# API URLs
VITE_API_URL=https://keysncaps.com
VITE_API_URL_LOCAL=http://localhost:4242

# Payment Processing (Use LIVE keys for production)
STRIPE_SECRET_KEY=sk_live_replace_with_your_actual_stripe_secret_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_replace_with_your_actual_stripe_publishable_key
VITE_PAYMENT_API_URL=/create-payment-intent

# Email Configuration (Server-side)
EMAIL_HOST=mail.privateemail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@keysncaps.com
EMAIL_PASSWORD=your_email_password_here

# EmailJS Configuration (Client-side email sending)
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
VITE_EMAILJS_CONTACT_TEMPLATE_ID=your_emailjs_contact_template_id_here
VITE_EMAILJS_ORDER_TEMPLATE_ID=your_emailjs_order_template_id_here
VITE_EMAILJS_ORDER_STATUS_TEMPLATE_ID=your_emailjs_order_status_template_id_here
VITE_SUPPORT_EMAIL=support@keysncaps.com

# WARNING: Use production values when deploying!